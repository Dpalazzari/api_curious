<header class='navbar'>
	<img id="github-pic" src="https://octicons.github.com/img/og/mark-github.png">

	

	<% if current_user %>
		<%= link_to "Logout", logout_path %>
		<%= link_to "Repos", find_repos_path %>
	<% else %>
		<%= link_to "Login thru Github", "https://github.com/login/oauth/authorize?client_id=#{ENV['client_id']}" %>
	<% end %>
</header>